<%- include('partials/header'); %>
<h1>Home</h1>
<p> <%= hometext %> </p>
<% posts.forEach(function(post) { %>
	<h2> <%= post.title %>
	<% post.category.forEach(function(cat) { %>
		<u><em> <%= cat.name %> </em></u>
	<% }) %>
	</h2>
	<% if ( post.body.length > 250) { %>
      	<% var cutBody = post.body.substring(0, 800); %>
	  	<p> <%= cutBody %> <a href="/posts/<%= post.title %>">read more</a> </p>
		<% } %>
	<% if ( post.body.length <= 800) { %>
	  	<p> <%= post.body %> <a href="/posts/<%= post.title %>">view page</a> </p>
		<% } %>	
<% }); %>
